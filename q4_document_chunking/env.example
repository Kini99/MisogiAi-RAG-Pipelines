# Intelligent Document Chunking System - Environment Configuration

# OpenAI Configuration (optional - for advanced QA features)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Store Configuration
VECTOR_STORE_PATH=./vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNK_SIZE=2000
MIN_CHUNK_SIZE=100

# Performance Monitoring
METRICS_DIR=./metrics

# Web Application Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for advanced features)
DATABASE_URL=sqlite:///./data/app.db

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=txt,md,pdf,docx,html,csv,json

# Performance Thresholds
SEARCH_RESPONSE_TIME_THRESHOLD=2.0
QA_RESPONSE_TIME_THRESHOLD=5.0
PROCESSING_TIME_PER_CHUNK_THRESHOLD=0.1
MIN_CONTEXT_SCORE_THRESHOLD=0.7
MIN_USER_FEEDBACK_THRESHOLD=3 