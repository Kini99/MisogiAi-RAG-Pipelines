# Legal Document Search System Configuration

# Application Settings
APP_NAME="Indian Legal Document Search"
DEBUG=True
PORT=8501

# Model Settings
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
LEGAL_NER_MODEL="jio/Legal-BERT-NER"
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32

# Similarity Method Weights
COSINE_WEIGHT=0.6
ENTITY_MATCH_WEIGHT=0.4
MMR_LAMBDA=0.5

# Document Processing
MAX_DOCUMENT_SIZE=50  # MB
SUPPORTED_FORMATS="pdf,docx,txt"
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Search Settings
TOP_K_RESULTS=10
DIVERSITY_THRESHOLD=0.3

# Performance Metrics
PRECISION_TOP_K=5
RECALL_THRESHOLD=0.7

# File Paths
DATA_DIR="./data"
UPLOAD_DIR="./uploads"
CACHE_DIR="./cache"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="app.log" 